trigger restrictTeacherInsertUpdate on Contact (before insert, before update) {
    if(trigger.isBefore && (trigger.isUpdate || trigger.isInsert)){
        List<Teach__c> teach = [SELECT Subject__c, Contact__r.Id from Teach__c WHERE Contact__r.Id IN :Trigger.New];
        for(Teach__c hindiSub :teach){	
            if(hindiSub.Subject__c.contains('Hindi')){
                hindiSub.Contact__r.Id.addError('You can not update or insert records');
            }
        }
    }
			
}