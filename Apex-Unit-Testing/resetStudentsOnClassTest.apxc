@isTest
public class resetStudentsOnClassTest {
		 @isTest static void studentsDel(){
        Class__c c = new class__C(Name='new test class');
        INSERT c;
        List<Student__c> StudentsList = new List<Student__C>();
        for(Integer noOfStud=0;noOfStud<5;noOfStud++){
            Student__c student = new student__c(Name='test student '+noOfStud,
                                               LastName__c='?',
                                               class__c = c.id);
            StudentsList.add(student);
        }
        INSERT StudentsList;
        UPDATE c;

        c.Custom__c ='Reset';
        Test.startTest();
        Database.SaveResult sr = Database.update(c);
        Test.stopTest();
        
        List<class__c> cll = [SELECT NumberOfStudents__c FROM Class__C WHERE name='new test class'];
        System.assertEquals(cll[0].NumberOfStudents__c.intValue(),0);
    }

}