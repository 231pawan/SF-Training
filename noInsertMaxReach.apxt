trigger noInsertMaxReach on Class__c (before update) {
		if(trigger.isUpdate){
        for(class__c classes:trigger.new){
             system.debug(trigger.new);
        	if(classes.NumberOfStudents__c >= classes.MaxSize__c){
            	classes.addError('you can not add student because limit reached');
        	}
    	}
    }
}